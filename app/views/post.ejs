<%- include header %>

<form name="formPost" method="post" action="/admin/post/new" onSubmit="return checkform()">
    <% if(post._id){%>
        <input type="hidden" name="post[_id]" value="<%= post._id%>"/>
    <%}%>

    <div class="row">
        <h4>标题：</h4>
        <div class="col-xs-8">
            <input type="text" name="post[title]" class="form-control" placeholder="title input" required>
        </div>
    </div>


    <div class="row">
        <h4>标签：</h4>
        <div class="col-xs-2">
            <input type="text" name="post[tags]" class="form-control tagOne tags" placeholder="tag1 input" id="" required />
        </div>
        <div class="col-xs-2">
            <input type="text" name="post[tags]" class="form-control tagTwo tags" placeholder="tag2 input" id="" required />
        </div>
        <div class="col-xs-2">
            <input type="text" name="post[tags]" class="form-control tagThree tags" placeholder="tag3 input" id="" required />
        </div>


    </div>

    <div class="row">
        <h4>正文：</h4>
        <div class="col-xs-8">

            <textarea name="post[post]" id="editor_text" cols="50" rows="20" style="width:100%" ></textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-7">
            <input type="button"  class="btn btn-primary btn-sm" value="发表" data-toggle="modal" data-target="#myModal"  />
        </div>
    </div>





   <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">亲，还需要什么补充的么？</h4>
                </div>
                <div class="modal-body">
                    请确认是否发表？
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary btn-sm" >确认发表</button>

                </div>
            </div>
        </div>
    </div>



</form>

<%- include footer%>
