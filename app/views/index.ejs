<%- include header %>


<div class="container">
<div class="row">
    <div class="col-sm-8 blog-main">

        <% if(posts){%>
        <% posts.forEach(function (post, index) { %>
        <div class="blog-post " >
                <p>
                <h2 class="blog-post-title" ><a href="/post/<%= post._id %>" style="text-decoration:none;"><%= post.title %></a></h2>
                <!--
                        <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a>
                    </p>-->
                <p class="blog-post-meta" >
                    <span class="glyphicon glyphicon-pencil"></span>
                    <a href="/u/<%= post.name%>"><%= post.name %></a> |
                    <span class="glyphicon glyphicon-time"></span>
                    <%= moment(post.meta.updateAt).format('MM/DD/YYYY')%>
                    <% if ( post.reprint_info && post.reprint_info.reprint_from ){ %>

                    <br><a class="btn btn-xs btn-default" href="/post/<%= post.reprint_info.reprint_from %>">原文链接</a>
                    <% } %>

                    <span class="glyphicon glyphicon-tags"></span>
                    <% post.tags.forEach(function (tag,index) { %>
                    <a class="tag btn btn-xs btn-info" href="/tags/<%= tag %>"><%= tag %></a>
                    <% }) %>

                </p>

                <div class="blog-description"><%- post.post %></div>


                <div class="info">
                    <span class="btn btn-xs btn-default" disabled="disabled">阅读： <strong><%= post.pv %></strong> </span>
                <span class="btn btn-xs btn-default" disabled="disabled">
                    转载：
                    <% if (post.reprint_info && post.reprint_info.reprint_to) { %>
                    <strong><%= post.reprint_info.reprint_to.length %></strong>
                    <% } else { %>
                    <strong ><%= 0 %></strong>
                    <% } %>
                </span>
                    <span><p class="hoorayshare">
                            <a class="hr-share-tsina"></a>
                            <a class="hr-share-tqq"></a>
                            <a class="hr-share-qzone"></a>
                            <a class="hr-share-baidu"></a>
                            <a class="hr-share-douban"></a>
                            <a class="hr-share-more"></a>
                        </p></span>
                </div>



        </div>
        <% }); %>
        <%}%>
    </div>
    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
        <div class="sidebar-module sidebar-module-inset">
            <h4>关于</h4>
            <img src="/images/getface.jpeg" alt="zeffon"/>
            <p class="glyphicon glyphicon-tower">&nbsp鸟人 <a href="https://github.com/zeffon">zeffon</a> 一个关于javascript、nodejs的转载分享博客。欢迎拍砖。</p>
            <p><address>
                <span class="glyphicon glyphicon-envelope">&nbspzephoony@gmail.com</span>
            </address></p>
        </div>
        <div class="sidebar-module sidebar-module-inset">
            <h4>标签</h4>
            <% if( tags && tags.length>0 ){%>
            <% tags.forEach(function (tag, index) { %>

            <a class="tagSpan label label-primary"  href="/tags/<%= tag %>"><span><%= tag %></span></a>


            <% }) %>
            <% } %>
        </div>


    </div>
</div>
</div>


<%- include footer %>